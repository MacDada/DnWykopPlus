{
	"name": "DnWykopPlus",
	"version": "0.51",
	"manifest_version": 2,
	"description": "Dodatki do serwisu Wykop.pl",
    "homepage_url": "https://github.com/MacDada",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
	"content_scripts": [
		{
			"matches": [
				"http://www.wykop.pl/",
				"http://www.wykop.pl/strona/*",
				"http://www.wykop.pl/aktywne/",
				"http://www.wykop.pl/aktywne/strona/*",
				"http://www.wykop.pl/najnowsze/",
				"http://www.wykop.pl/najnowsze/strona/*",
				"http://www.wykop.pl/wykopalisko/*"
			],
			"css": ["style.css"],
			"js": ["jquery-1.8.3.min.js", "jquery.sortElements-0.11.js", "hidingItems.js"]
		}
	]
}